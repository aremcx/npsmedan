{
  "version": 2,
  "name": "smedan-nipost-discount-form",
  "public": true,
  "builds": [
    {
      "src": "api/submit.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/submit",
      "methods": ["POST"],
      "dest": "/api/submit.js"
    },
    {
      "src": "/(.*)\\.html",
      "headers": {
        "cache-control": "max-age=31536000"
      },
      "dest": "/$1"
    },

    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}